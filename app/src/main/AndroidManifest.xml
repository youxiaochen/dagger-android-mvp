<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="chen.you.mvpapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/lib_app_name"
        android:supportsRtl="true"
        android:name=".mvp.App"
        android:theme="@style/AppAnimTheme">
        <activity android:name=".mvp.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".mvp.ui.SecondActivity"/>

        <activity android:name=".mvp.ui.ThreeActivity"/>

        <activity android:name=".mvp.ui.FourActivity"/>
    </application>

</manifest>