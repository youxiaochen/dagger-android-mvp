<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff00">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/size_18sp"
        android:text="this is testchildFragment..."/>

    <EditText android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:hint="请输入name"
        android:layout_height="@dimen/size_40dp" />

    <EditText android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:hint="请输入password"
        android:layout_height="@dimen/size_40dp" />

    <Button android:id="@+id/bt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="love"/>

    <Button android:id="@+id/bt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="requset"/>

    <Button android:id="@+id/bt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="test rxpermission"/>

    <TextView android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false" />

</LinearLayout>